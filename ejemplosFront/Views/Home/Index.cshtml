@model List<ejemplosFront.Models.PersonaViewModel>

@{
    ViewBag.Title = "Home Page";
}

<main>
   
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="Index" asp-controller="Home" class="text-center">
                <div class="form-group">
                    <div class="d-inline-block">
                        <input type="text" class="form-control" name="nombre" placeholder="Buscar" />
                    </div>
                    <div class="d-inline-block">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
        @foreach (var item in Model)
        {
            <h1> @item.Cuil </h1>
            <h2> @item.ApellidoYNombre </h2>
            <h3> @item.fechaNacimiento </h3>
        }      
    </div>
    <hr class="text-white" />
    <div class="row text-center">
        <div class="">
            <a href="@Url.Action("Alta","Home")"class="btn btn-outline-info mb-4">Alta</a>
        </div>    
    </div>
</main>

