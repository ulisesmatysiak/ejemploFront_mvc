@model List<ejemplosFront.Models.PersonaViewModel>

@{
    ViewBag.Title = "Home Page";
}

<main>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="Index" asp-controller="Home" class="text-center">
                <div class="form-group">
                    <div class="d-inline-block">
                        <input type="text" class="form-control" name="nombre" placeholder="Buscar" />
                    </div>
                    <div class="d-inline-block">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>Apellido y Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ApellidoYNombre</td>
                            <td><a href="@Url.Action("Detalle", "Home", new { item.Id })" class="btn btn-outline-info">Ver detalle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <hr class="text-white" />
    <div class="row text-center">
        <div class="">
            <a href="@Url.Action("Alta","Home")" class="btn btn-outline-success mb-4">Alta</a>
        </div>
    </div>
</main>

